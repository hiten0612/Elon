<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".activities.fragment.AccountFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_60sdp"
        android:elevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_100sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_30sdp"
            android:src="@drawable/profile" />

    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardView"
        android:layout_marginTop="-70dp"
        android:background="@drawable/profile_shape">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:fontFamily="@font/helvetica_neue_bold"
            android:text="Hiten Prajapati"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userName"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_26sdp"
            android:fontFamily="@font/helveticaneue_regular"
            android:text="phiten612@gmail.com"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChangeEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userName"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_22sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:background="@drawable/change_button_shape"
            android:text="change"
            android:textAllCaps="false"
            android:textColor="@color/loginColor"
            android:textSize="@dimen/_10ssp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/userPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userEmail"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_26sdp"
            android:fontFamily="@font/helveticaneue_regular"
            android:text="******"
            android:textColor="@color/white"
            android:textSize="@dimen/_22ssp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnChangePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnChangeEmail"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:background="@drawable/change_button_shape"
            android:text="change"
            android:textAllCaps="false"
            android:textColor="@color/loginColor"
            android:textSize="@dimen/_10ssp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userPass"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:fontFamily="@font/helvetica_neue_bold"
            android:text="Notification Settings"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtUpdateEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notification"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/helveticaneue_regular"
            android:text="Send weekly update to email "
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/updtaeImgOff"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/notification"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:src="@drawable/off" />

        <androidx.appcompat.widget.AppCompatTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUpdateEmail"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:fontFamily="@font/helveticaneue_regular"
            android:text="Allow notification"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/notificationOn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/updtaeImgOff"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:src="@drawable/on" />


    </RelativeLayout>


</RelativeLayout>